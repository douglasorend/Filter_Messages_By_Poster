		<require-file name="filter.png" destination="$imagesdir" />
		<require-file name="unfilter.png" destination="$imagesdir" />
	</install>
	<uninstall for="2.1 Beta 3">
		<modification reverse="true">install_21x.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<modification reverse="true">language_spanish_latin.xml</modification>
		<remove-file name="$imagesdir/filter.png" />
		<remove-file name="$imagesdir/unfilter.png" />
	</uninstall>
</package-info>